# Makefile per la compilazione del progetto LaTeX
# Creato date

.PHONY: pdf dvi ps compile clean download all
compile: pdf
	make clean

all: pdf dvi ps
	make clean

ps: dvi
	dvips TopologiaGeneraleDimostrazioni.dvi
	dvips TopologiaGenerale.dvi

dvi: download
	latex --shell-escape TopologiaGeneraleDimostrazioni.tex
	latex --shell-escape TopologiaGenerale.tex

pdf: download
	pdflatex --shell-escape TopologiaGeneraleDimostrazioni.tex
	pdflatex --shell-escape TopologiaGenerale.tex

# Dovremmo controllare che sia la versione pi√π recente
download:
	wget https://github.com/trenta3/stdmdoc/raw/master/stdmdoc.cls -O stdmdoc.cls

clean:
	rm -f *.aux *.log *.out

# Fine del Makefile
